<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Parkrun.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Parkrun"
    xmlns:views="clr-namespace:Parkrun.MVVM.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Parkrun">

    <ShellContent
        Title="Daten"
        ContentTemplate="{DataTemplate views:ParkrunPage}"
        Route="ParkrunPage" />

    <ShellContent 
        Title="Linien Diagramm"
        ContentTemplate="{DataTemplate views:ChartPage}" 
        Route="ChartPage" />

    <ShellContent 
        Title="Laufanalyse"
        ContentTemplate="{DataTemplate views:RunningAnalysisPage}" 
        Route="Laufanalyse" />

</Shell>
