<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Parkrun.MVVM.Views.RunningAnalysisPage"
             Title="Lauf Analyse">
    <VerticalStackLayout>
        <Picker 
            HorizontalOptions="Center"
            Title="WÃ¤hle einen Lauf"
            ItemsSource="{Binding Data}" 
            SelectedItem="{Binding SelectedRun}" 
            SelectedIndex="{Binding ParkrunIndex, Mode=TwoWay}"
            WidthRequest="400" 
            HeightRequest="70">
        </Picker>
        <Grid 
            ColumnDefinitions="auto,auto"
            RowDefinitions="auto,auto"
            HorizontalOptions="Center"
            Margin="10"
            >
            <Label 
                Grid.Row="0"
                Grid.Column="0"
                Text="Laufzeit in Km/h" 
                FontAttributes="Bold" 
                TextDecorations="Underline"
                Margin="0,0,10,0"
                />
            <Label 
                Grid.Row="1"
                Grid.Column="0"
                Text= "{Binding KmH, StringFormat='{0:F2}'}"
                Margin="0,0,10,0"
                />
            <Label 
                Grid.Column="1"
                Grid.Row="0"   
                Text="Laufzeit in m/s" 
                FontAttributes="Bold" 
                TextDecorations="Underline"
                Margin="0,0,10,0"
                />
            <Label 
                Grid.Column="1"
                Grid.Row="1"
                Text= "{Binding MS, StringFormat='{0:F2}'}"
                Margin="0,0,10,0"
                />
        </Grid>
        
    </VerticalStackLayout>
</ContentPage>